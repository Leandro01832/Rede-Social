@model business.business.PastaImagem

<h4>PastaImagem</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreatePasta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="UserId"  type="hidden" />
            </div>
            <div class="form-group">
                <input type="button" id="CriarPasta" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
        <script type="text/javascript">
            let token = $('[name=__RequestVerificationToken]').val();

            let headers = {};
            headers['RequestVerificationToken'] = token;

            var numero = $("#IdentificaPagina").val();            

            $("#CriarPasta").click(function () { 
                var data = {
                    Nome: $("#Nome").val(),
                    UserId: $("#UserId").val()
                };

                $.ajax({
                    url: '/Ferramenta/CreatePasta',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    headers: headers
                }).done(function (response) {          
                    $(".content").load("/Pagina/getview", { id: numero });
                    alert("Pasta criada com sucesso!!! " + response);
                }); 
            });

            
        </script>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
