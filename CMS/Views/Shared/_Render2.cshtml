<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instag Leo</title>

    <environment names="Development">
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    </environment>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/the-big-picture.css" />

    <script src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=m8nq39l31dv5y829ehcjsd0rciwei8crem0yubndhdgs72fd"></script>
    <script src="~/js/Tynymce.js"></script>
    <script data-ad-client="ca-pub-1473710636214528" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
</head>

<body id="corpoPagina">
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top" id="Menuzinho" style="z-index:35;">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                </div>
                <div class="navbar-collapse collapse">


                    <div class="row">
                        <div id="Bloco" class="col-md-2" style='background-color: white;'>BlocoID</div>
                        <div id="QuantidadeElementos" class="col-md-2" style='background-color: aqua;'>QuantidadeElementos</div>
                        <div id="ElementoId" class="col-md-2" style='background-color: #00ff21'>ElementoId</div>
                        <div id="ElementoId" class="col-md-2" style='background-color: #ff0000'>
                            <p class="text-primary text-center glyphicon glyphicon-globe">@Model.Pedido.Nome </p>
                            
                        </div>
                        <div id="Informações" class="col-md-4" style='background-color: #dcdcdc;'>
                            
                            <partial name="_LoginPartial" />

                        </div>

                        <ul class="nav navbar-nav">

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle glyphicon glyphicon-cog" data-toggle="dropdown">galerias e Configurações</a>
                                <ul class="dropdown-menu">
                                    <li><a id="EditarCores" class="glyphicon glyphicon-tint">Galeria de cores</a></li>
                                    <li><a href="#" id="GaleriaBloco" class="glyphicon glyphicon-th-large">Galeria de blocos comuns</a></li>
                                    <li><a href="#" id="GaleriaBlocoFixo" class="glyphicon glyphicon-th-large">Galeria de blocos fixos</a></li>
                                    <li><a href="#" class="Configuracao glyphicon glyphicon-file">Configurações de Pagina</a></li>
                                    <li><a href="#" class="imagemBackPagina glyphicon glyphicon-tint">Background da pagina</a> </li>
                                    <li><a href="#" class="GaleriaBackground glyphicon glyphicon-tint">Galeria de backgrounds</a> </li>
                                    <li><a href="#" class="GaleriaLayout glyphicon glyphicon-tint">Galeria de layouts</a> </li>
                                    <li>@Html.ActionLink("Galeria de Sites", "GaleriaSite", "Pedido", null, new { @class = "glyphicon glyphicon-globe" })</li>
                                    <li><a id="btnPermissao" class="glyphicon glyphicon-lock">Permissões</a></li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle glyphicon glyphicon-star" data-toggle="dropdown">Galeria de elementos</a>
                                <ul class="dropdown-menu">
                                    <li><a href="#" class="glyphicon glyphicon-facetime-video" id="GaleriaElementoVideo" onclick="ElementoGaleria(this);">Videos</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-picture" id="GaleriaElementoImagem" onclick="ElementoGaleria(this);">Imagens</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-sound-dolby" id="GaleriaElementoCarouselImg" onclick="ElementoGaleria(this);">Carrossel de imagens</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-file" id="GaleriaElementoCarouselPagina" onclick="ElementoGaleria(this);">Carrossel de paginas</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-hand-up" id="GaleriaElementoLinkBody" onclick="ElementoGaleria(this);">Links</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-hand-up" id="GaleriaElementoLinkMenu" onclick="ElementoGaleria(this);">links de menu</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-hand-up" id="GaleriaElementoDropdown" onclick="ElementoGaleria(this);">Grupo de links</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-text-width" id="GaleriaElementoTexto" onclick="ElementoGaleria(this);">Textos</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-list-alt" id="GaleriaElementoTable" onclick="ElementoGaleria(this);">Tabelas</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-align-left" id="GaleriaElementoCampo" onclick="ElementoGaleria(this);">Campos</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-lamp" id="GaleriaElementoProduto" onclick="ElementoGaleria(this);">Produtos</a></li>
                                    <li><a href="#" class="glyphicon glyphicon-align-left" id="GaleriaElementoFormulario" onclick="ElementoGaleria(this);">Formulários</a></li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle glyphicon glyphicon-eye-open" data-toggle="dropdown">Visualizações</a>
                                <ul class="dropdown-menu">
                                    <li><a id="Ocultar" class="glyphicon glyphicon-th-large">Mostrar blocos fixos</a></li>
                                    <li><a class="Ferramenta glyphicon glyphicon-wrench">Mostrar ferramenta</a></li>
                                    <li>
                                        <a href="/site/@Model.Pedido.DominioTemporario/@Model.Titulo.Replace(" ", "")" target="_blank" class="glyphicon glyphicon-fullscreen">
                                            visualizar na Tela inteira
                                        </a>
                                    </li>
                                    <li><input id="modo" type="checkbox" />  Desktop || Mobile</li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle glyphicon glyphicon-th" data-toggle="dropdown">Posições</a>
                                <ul class="dropdown-menu">
                                    <li><a id="AlterarPosicao" class="glyphicon glyphicon-th">Alterar posições</a></li>
                                    <li><a id="SalvarBlocos" class="glyphicon glyphicon-th">Salvar posições do bloco</a></li>
                                    <li><a id="SalvarElementos" class="glyphicon glyphicon-th">Salvar posições do elemento</a></li>
                                </ul>
                            </li>

                            @*<li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Full Screen</a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#" onclick="openFullscreen();">Ferramenta</a></li>
                                        <li><a href="#" onclick="openFullscreen2();">Pagina</a></li>
                                        <li><a href="#" onclick="openFullscreen3();">Ferramenta 2</a></li>
                                    </ul>
                                </li>*@





                        </ul>

                        <a href="#" class="btn btn-warning Salvar glyphicon glyphicon-floppy-saved" data-value="Salvar(@Model.Id)"></a>
                        <a href="#" id="Atualizar" class="btn btn-danger glyphicon glyphicon-refresh"></a>
                        <a href="/Index/" class="btn btn-primary glyphicon glyphicon-home">Home</a>



                    </div>


                </div>
            </div>
        </div>
    </header>



    @RenderBody()


    <environment names="Development">
        @*<script src="~/lib/jquery/dist/jquery.js"></script>*@
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)


</body>
</html> 

<script type="text/javascript">

    $(document).ready(function () {


        $("#NumeroPaginaAcesso").change(function () {
            document.getElementById("acessoPaginaComInput").href = "/Pagina/";
            document.getElementById("acessoPaginaComInput").href += $(this).val();
        });

        $("#InputEmail").change(function () {
            document.getElementById("AcessoTemplates").href = "/Pedido/GaleriaSite/";
            document.getElementById("AcessoTemplates").href += $(this).val();
        });

    });

</script>