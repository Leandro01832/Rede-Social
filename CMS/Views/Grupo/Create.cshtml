@model business.business.Group.Grupo



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Story</label>
                <select id="StoryId" name="StoryId" class="form-control"></select>
            </div>

             <div class="form-group">
                <label asp-for="SubStoryId" class="control-label"></label>
                <select asp-for="SubStoryId" class="form-control"></select>
                <span asp-validation-for="SubStoryId" class="text-danger"></span>
            </div>

            <input type="hidden" value="@ViewBag.IdentificacaoUser" id="IdentificacaoUser">
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>


    
@section scripts{
  
    <script type="text/javascript" src="~/js/AjaxGetGroup.js"></script>
      

}
