@model business.business.Elementos.Dropdown

<h4>Dropdown</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="_Dropdown">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ordem" class="control-label"></label>
                <input asp-for="Ordem" class="form-control" />
                <span asp-validation-for="Ordem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ElementosDependentes" class="control-label"></label>
                <input asp-for="ElementosDependentes" class="form-control" />
                <span asp-validation-for="ElementosDependentes" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />
            @{
                if (Model.Id == 0)
                {
                    <div class="form-group">
                        <script src="~/js/Elemento/ElementoDependenteDropdown.js"></script>
                        <input type="button" value="Save" onclick="ScriptElemento.Create()" class="btn btn-primary" />
                    </div>
                }
                else
                {
                    <div>
                        <script src="~/js/Elemento/ElementoDependenteDropdown.js"></script>

                        <script type="text/javascript">
                            $(document).ready(function () {
                                $("input, select").change(function () {

                                    ScriptElemento.Update();
                                });
                            });
                        </script>

                    </div>
                }
            }
        </form>
    </div>
</div>
