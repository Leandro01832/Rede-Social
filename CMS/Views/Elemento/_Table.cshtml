@model business.business.Elementos.Table

<h4>Table</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="_Table">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstiloTabela" class="control-label"></label>
                <select asp-for="EstiloTabela" class="form-control">
                    <option value="auto">tabela clara</option>
                    <option value="">tabela escura</option>
                    <option value="">tabela zebrada</option>
                    <option value="">tabela zebrada escura</option>
                    <option value="">tabela sem linhas</option>
                    <option value="">tabela sem linhas escura</option>
                    <option value="">tabela com destaque</option>
                    <option value="">tabela com destaque escuro</option>
                </select>
                <span asp-validation-for="EstiloTabela" class="text-danger"></span>
            </div>

            @{
                if (ViewBag.condicao)
                {
                    <div class="form-group">
                        <label asp-for="PaginaEscolhida" class="control-label"></label>
                        <select asp-for="PaginaEscolhida" class="form-control" asp-items="ViewBag.PaginaEscolhida"></select>
                        <span asp-validation-for="PaginaEscolhida" class="text-danger"></span>
                    </div>
                }
            }

            <input asp-for="Ordem" type="hidden" />
            <input asp-for="Pagina_" type="hidden" />
            <input type="hidden" asp-for="Id" />
            @{
                if (Model.Id == 0)
                {
                    <div class="form-group">
                        <script src="~/js/Elemento/ElementoDependenteTable.js"></script>
                        <input type="button" value="Save" onclick="ScriptElemento.Create()" class="btn btn-primary" />
                    </div>
                }
                else
                {
                    <div>
                        <script src="~/js/Elemento/ElementoDependenteTable.js"></script>

                        <script type="text/javascript">
                            $(document).ready(function () {
                                $("input, select").change(function () {

                                    ScriptElemento.Update();
                                });
                            });
                        </script>

                    </div>
                }
            }
        </form>
    </div>
</div>
