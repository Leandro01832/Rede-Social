@model IEnumerable<business.business.Group.Story>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<h4>Lista @ViewBag.pagina</h4>
<p>
    <a asp-action="Create" class="btn btn-primary">Criar novo story</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @{
                        if (item.Nome != "Padrao")
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                        }
                        else
                        {
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detalhes</a>
                        }
                    }


                </td>
            </tr>
        }
    </tbody>
</table>
<label>Lista:</label>
<input type="number" id="numeroAcesso" value="@ViewBag.pagina" min="1" />

@section scripts{


<script type="text/javascript">
    $(document).ready(function () {

        $("#numeroAcesso").change(function () {
        
            window.location.href = "/Story/Index/" + $(this).val();
            
        });

});
</script>

}