@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Importar videos de usuario do youtube</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

      <div class="form-group">     
        <label  class="control-label">Usuario</label>
            <input id="usuario" name="usuario" type="text" >      
    </div>   

    <div class="form-group">    
        <label  class="control-label">Capitulo</label>
            @Html.DropDownList("cap", null, htmlAttributes: new { @class = "form-control" })      
    </div> 

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Inportar" class="btn btn-default" />
        </div>
    </div>
</div>
}
