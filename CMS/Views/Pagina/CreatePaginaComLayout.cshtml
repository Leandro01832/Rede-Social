<h4>Criar Paginas com layout</h4>
<hr />


@{
    if (ViewBag.condicao)
    {
        <div class="row">
            <div class="col-md-12">
                <form asp-action="CreatePaginaComLayout" id="formulario">
                    <input type="hidden" id="IdPagina" name="IdPagina" value="@ViewBag.pagina" />
                    <div class="form-group">
                        <label id="label-loop" class="control-label">Quantidade de paginas</label>
                        <select id="Loop" name="Loop" class="form-control">
                            <option value="1">1 pagina</option>
                            <option value="2">2 paginas</option>
                            <option value="3">3 paginas</option>
                            <option value="4">4 paginas</option>
                            <option value="5">5 paginas</option>
                            <option value="6">6 paginas</option>
                            <option value="7">7 paginas</option>
                            <option value="8">8 paginas</option>
                            <option value="9">9 paginas</option>
                            <option value="10">10 paginas</option>
                        </select>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Criar paginas" />
                    </div>
                </form>

            </div>
        </div>

    }
    else
    {
        <h3>Esta pagina não é um layout</h3>
    }
}
