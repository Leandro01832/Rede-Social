@model business.business.Pagina

<h4>Pagina</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="_EditarPagina">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="ArquivoMusic" type="hidden" />

            </div>

           

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Music" /> @Html.DisplayNameFor(model => model.Music)
                    </label>
                </div>
            </div>
           
             <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Pular" /> @Html.DisplayNameFor(model => model.Pular)
                    </label>
                </div>
            </div>

             <div class="form-group">
                <label asp-for="FlexDirection" class="control-label"></label>
                <select asp-for="FlexDirection" class="form-control">
                    <option value="row">row</option>
                    <option value="row-reverse">row-reverse</option>
                    <option value="column">column</option>
                    <option value="column-reverse">column-reverse</option>
                </select>
                <span asp-validation-for="FlexDirection" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="AlignItems" class="control-label"></label>
                <select asp-for="AlignItems" class="form-control">
                    <option value="stretch">stretch</option>
                    <option value="baseline">baseline</option>
                    <option value="first baseline">first baseline</option>
                    <option value="last baseline">last baseline</option>
                    <option value="center">center</option>
                    <option value="flex-start">flex-start</option>
                    <option value="flex-end">flex-end</option>
                    <option value="self-start">self-start</option>
                    <option value="self-end">self-end</option>
                    <option value="start">start</option>
                    <option value="end">end</option>
                    <option value="safe">safe</option>
                    <option value="unsafe">unsafe</option>
                </select>
                <span asp-validation-for="AlignItems" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sobreescrita" class="control-label">Sobreescrita</label><br>
                <textarea asp-for="Sobreescrita" cols="30" rows="10" style="height: 300px; width: 350px;" ></textarea>
            </div>

            <div class="form-group">
                <input asp-for="UserId" type="hidden" />
                <input type="hidden" id="StoryId" name="StoryId" value="@Model.StoryId" />
            </div>

            <div class="form-group">
                <label asp-for="SubStoryId" class="control-label"></label>
                <select asp-for="SubStoryId" class="form-control" ></select>
                <span asp-validation-for="SubStoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GrupoId" class="control-label"></label>
                <select asp-for="GrupoId" class="form-control" ></select>
                <span asp-validation-for="GrupoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubGrupoId" class="control-label"></label>
                <select asp-for="SubGrupoId" class="form-control" ></select>
                <span asp-validation-for="SubGrupoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SubSubGrupoId" class="control-label"></label>
                <select asp-for="SubSubGrupoId" class="form-control" ></select>
                <span asp-validation-for="SubSubGrupoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Layout" /> @Html.DisplayNameFor(model => model.Layout)
                    </label>
                </div>
            </div>

            
        <a  href="#" id="Adicionar"  class="btn btn-warning">
            Adicionar novo Container
        </a>


        </form>

    </div>
</div>

<div>
    <script type="text/javascript" src="~/js/AjaxGetGroup.js"></script>
    <script type="text/javascript">

        let token = $('[name=__RequestVerificationToken]').val();
        let headers = {};
        headers['RequestVerificationToken'] = token;  

                $("#Adicionar").click(function () {

                    var formData = new FormData();
                    formData.append("id", $("#IdentificaPagina").val());

                    $.ajax({
                        url: '/Pagina/Adicionar',
                        data: formData,
                        processData: !1,
                        contentType: !1,
                        type: "POST",
                        headers: headers,
                        success: function (data) {
                        var numero = $("#IdentificaPagina").val();
                        $(".content").load("/Pagina/getview", { id: numero });
                        if (data !== "")
                        {
                            alert("Erro ao adicionar. " + data);
                        }
                    }
                });
            });

        $("input, select").change(function () {

            var data = {
            Id: @Model.Id,
            Titulo: $("#Titulo").val(),
                UserId: $("#UserId").val(),
            Facebook: $("#Facebook").val(),
            Sobreescrita: $("#Sobreescrita").val(),
            AlignItems: $("#AlignItems").val(),
            FlexDirection: $("#FlexDirection").val(),
            Twiter: $("#Twiter").val(),
            ArquivoMusic: $("#ArquivoMusic").val(),            
            Music: $("#Music").is(':checked'),
            PedidoId: $("#PedidoId").val(),
            StoryId: $("#StoryId").val(),
            SubStoryId: $("#SubStoryId").val(),
            GrupoId: $("#GrupoId").val(),
            SubGrupoId: $("#SubGrupoId").val(),
            SubSubGrupoId: $("#SubSubGrupoId").val(),
            Blocos: $("#Blocos").val(),
            Pular: $("#Pular").is(':checked'),
            Layout: $("#Layout").is(':checked')
        };  

            $.ajax({
                type: 'POST',
                contentType: 'application/json',
                url: '/Pagina/EditarPagina',
                data: JSON.stringify(data),
                 headers: headers
            }).done(function (response) {

                    var numero = $("#IdentificaPagina").val();
                    $(".content").load("/Pagina/getview", { id: numero });
                });
            return false;
        });
    </script>
</div>

