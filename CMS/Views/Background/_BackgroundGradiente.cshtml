@model business.Back.BackgroundGradiente

<h4>Background Gradiente</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="_BackgroundGradiente" id="formulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grau" class="control-label"></label>
                <input asp-for="Grau" class="form-control" />
                <span asp-validation-for="Grau" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" value="@ViewBag.id" />
            @{
                if (Model.Id == 0)
                {
                    <div class="form-group">
                        <input type="button" value="Save" onclick="ScriptBackground.Create()" class="btn btn-primary" />
                    </div>
                }
            }
        </form>
    </div>
</div>

<div>
    <script src="~/js/Background/backgroundGradiente.js"></script>
    <script src="~/js/AjaxGet.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("input, select").change(function () {

                ScriptBackground.Update();
            });
        });
    </script>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
