@model business.business.Elementos.Video

<h4>Video</h4>
<hr />
<div class="row">
    <div class="col-md-12">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        @{
            if (ViewBag.condicao)
            {
                <div class="form-group">
                    <label asp-for="PaginaEscolhida" class="control-label"></label>
                    <select asp-for="PaginaEscolhida" class="form-control" asp-items="ViewBag.PaginaEscolhida"></select>
                    <span asp-validation-for="PaginaEscolhida" class="text-danger"></span>
                </div>
            }
        }



        <div class="form-group">
            <input id="elemento" name="elemento" type="hidden" value="Video" />
        </div>

        <div class="form-group">
            <input asp-for="ArquivoVideo" type="hidden" />
        </div>

        @if (Model.Id == 0)
        {
            <div class="buttons">
                <div class="upload-button">
                    <input id="files" name="files" type="file" size="1" onchange="uploadFilesVideo('files');" />
                </div>
            </div>
        }

        @if (Model.Id != 0)
        {
            <div class="form-group">
                <input type="button" value="Copiar" onclick="ScriptElemento.Create()" class="btn btn-default" />
            </div>
        }

        <img id="arquivoVideo" src="~/imagem/LoadingBasketContents.gif" style="display:none;" />



    </div>
</div>
