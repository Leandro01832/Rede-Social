@model CMS.Models.UserModel

<h1>@Model.Name</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                

            <div class="form-group">
                <label asp-for="Livro" class="control-label"></label>
                <input asp-for="Livro" class="form-control" />
                <span asp-validation-for="Livro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label id="img" name="img" class="control-label">Imagem</label>
                <input id="imagem" name="imagem" type="file" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>